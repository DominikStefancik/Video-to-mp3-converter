{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@local/auth/*": ["auth/*"],
      "@local/database/*": ["database/*"],
      "@local/domain/*": ["domain/*"],
      "@local/express/*": ["express/*"],
      "@local/logging/*": ["logging/*"],
      "@local/interfaces/*": ["interfaces/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.js",
    "./src/**/*.spec.js",
    "./src/tests",
    "dist"
  ]
}